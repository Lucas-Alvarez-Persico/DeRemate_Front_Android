<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header violeta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#8B3DCC"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="20dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En Curso"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_margin="18dp"
        android:padding="20dp"
        android:elevation="4dp"
        android:backgroundTint="#FFFFFF"
        android:layout_gravity="center"
        android:clipToPadding="false">

        <!-- ID y Ubicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FFFFFF"
            android:elevation="2dp"
            android:background="@color/GrisNav">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedido ID:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#444" />

            <TextView
                android:id="@+id/tv_in_progress_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Numero de pedido ..."
                android:textSize="16sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Línea separadora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Info Detallada como bloque separado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FAFAFA"
            android:padding="16dp"
            android:elevation="2dp"
            android:backgroundTint="#FAFAFA"
            android:layout_marginBottom="12dp"
            android:clipToPadding="false"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:dividerPadding="10dp">

            <!-- Cliente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cliente:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tv_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente ..."
                    android:textSize="18sp"
                    android:textColor="#444" />
            </LinearLayout>

            <!-- Dirección -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dirección:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección ..."
                    android:textSize="18sp"
                    android:textColor="#444" />
            </LinearLayout>

            <!-- Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En camino"
                    android:textSize="18sp"
                    android:textColor="#444" />
            </LinearLayout>

            <!-- Inicio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Inicio:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de inicio ..."
                    android:textSize="18sp"
                    android:textColor="#444" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
