<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_delivery_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:background="@drawable/recuadro" />

    <TextView
        android:id="@+id/tv_order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:background="@drawable/recuadro" />

    <TextView
        android:id="@+id/tv_delivery_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:background="@drawable/recuadro" />

    <TextView
        android:id="@+id/tv_order_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:background="@drawable/recuadro" />

    <TextView
        android:id="@+id/tv_package_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UbicaciÃ³n del paquete:"
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:background="@drawable/recuadro" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:background="@drawable/recuadro" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:background="@drawable/recuadro" />

    <TextView
        android:id="@+id/tv_time_difference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:background="@drawable/recuadro" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/violeta1" />

        </LinearLayout>

</LinearLayout>
